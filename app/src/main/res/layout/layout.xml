<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/breakfastLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What time do you eat breakfast?" />

        <EditText
            android:id="@+id/breakfastTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/lunchLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What time do you eat lunch?" />

        <EditText
            android:id="@+id/lunchTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/dinnerLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What time do you eat dinner?" />

        <EditText
            android:id="@+id/dinnerTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />
    </LinearLayout>

</LinearLayout>